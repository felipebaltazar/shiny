<Project Sdk="MSBuild.Sdk.Extras">

    <PropertyGroup>
        <VersionSuffix>beta</VersionSuffix>
        <TargetFrameworks>netstandard2.0</TargetFrameworks>
        <RootNamespace>Shiny</RootNamespace>
        <Description>Shiny Integration - Xamarin Essentials - replaces a lot of the Shiny guts with the Essentials, but with all of the DI goodness</Description>
    </PropertyGroup>

    <ItemGroup>
        <None Include="readme.txt" pack="true" PackagePath="." />
        <PackageReference Include="Xamarin.Essentials" Version="1.5.3.1" />
        <PackageReference Include="Pharmacist.MSBuild" Version="1.5.15" />
    </ItemGroup>

    <ItemGroup Condition=" $(TargetFramework.StartsWith('netstandard')) ">
        <ProjectReference Include="..\Shiny.Core\Shiny.Core.csproj" />
    </ItemGroup>

    <ItemGroup Condition=" $(TargetFramework.StartsWith('monoandroid')) ">
        <Compile Include="Android\**\*.cs" />
        <ProjectReference Include="..\Shiny.Core\Shiny.Core.csproj" />
    </ItemGroup>

    <ItemGroup>
      <Compile Condition=" '$(EnableDefaultCompileItems)' == 'true' " Update="PrefencesSettings.cs">
        <SubType></SubType>
      </Compile>
      <Compile Condition=" '$(EnableDefaultCompileItems)' == 'true' " Update="EssentialsConnectivityImpl.cs">
        <SubType>Code</SubType>
      </Compile>
      <Compile Condition=" '$(EnableDefaultCompileItems)' == 'true' " Update="ConnectivityImpl.cs">
        <SubType>Code</SubType>
      </Compile>
      <Compile Update="PowerManagerImpl.cs">
        <SubType></SubType>
      </Compile>
      <Compile Update="EnvironmentImpl.cs">
        <SubType></SubType>
      </Compile>
    </ItemGroup>
</Project>
